#!/bin/bash

DATABASE=$1
DUMP_DIR=$2

mysql-drop-tables ${MYSQL_USERNAME} ${MYSQL_PASSWORD} ${MYSQL_HOSTNAME} ${DATABASE}

for i in ${DUMP_DIR}/*.sql.gz
do
  echo "Starting to import: $i"
  start=$(date +%s)
  zcat ${i} | MYSQL_PWD="${MYSQL_PASSWORD}" mysql --user=${MYSQL_USERNAME} --host=${MYSQL_HOSTNAME} ${DATABASE}
  end=$(date +%s)
  echo "Finished importing $i in: $(($end-$start)) seconds"
done
